  "files": [
    "admin",
    "server",
    "strapi-admin.js",
    "strapi-server.js"
  ],
  "strapi": {
    "name": "shopify",
    "displayName": "Shopify",
    "description": "Build a Shopify application with Strapi.",
    "kind": "plugin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shop3/strapi-plugin-shopify.git"
  },
  "scripts": {
