{
  "name": "strapi-plugin-shopify",
  "version": "0.0.2",
  "description": "Integrate Shopify in your Strapi application.",
  "license": "MIT",
  "files": [
    "admin",
    "server",
    "strapi-admin.js",
    "strapi-server.js"
  ],
  "strapi": {
    "name": "shopify",
    "displayName": "Shopify",
    "description": "Integrate Shopify in your Strapi application.",
    "kind": "plugin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strapify/strapi-plugin-shopify.git"
  },
  "scripts": {
    "release": "standard-version",
    "lint": "eslint --fix .",
    "lint:staged": "eslint --fix",
    "format": "prettier --write .",
    "husky:install": "husky install",
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --edit"
  },
  "dependencies": {
    "@shopify/shopify-api": "^2.0.0"
  },
  "peerDependencies": {
    "@strapi/design-system": "1.1.1",
    "@strapi/helper-plugin": "4.1.12",
    "@strapi/strapi": "4.1.12",
    "@strapi/utils": "4.1.12",
    "axios": "0.24.0",
    "koa-body": "4.2.0",
    "prop-types": "15.8.1",
    "qs": "6.10.1",
    "react": "17.0.2",
    "react-intl": "5.20.2",
    "styled-components": "5.3.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=12.x.x <=16.x.x",
    "npm": ">=6.0.0"
  },
  "lint-staged": {
    "*.(ts|tsx|js)": [
      "npm run lint:staged"
    ]
  }
}
